<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_container2"
    android:layout_height="match_parent"
    android:background="@color/card_color"
    tools:context=".OpActivity">



    <ImageView

        android:backgroundTint="@color/brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/arc_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_bold"
            android:text="ShopItAll"
            android:textColor="@color/brown"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text=" Welcome to ShopItAll! Dive in and start exploring. If you need help, we're just a message away.                                                        Enjoy :)"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up_btn_main"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/sign_up_btn"
            android:fontFamily="@font/poppins_bold"
            android:text="Sign Up"
            android:textColor="@color/hint_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn_main"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/poppins_bold"
            android:text="Login"
            android:textColor="@color/hint_color" />
        <TextView
            android:id="@+id/visitor"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:text="Log in as a visitor "/>
        <ProgressBar
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar"/>
    </LinearLayout>
</FrameLayout>